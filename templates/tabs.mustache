{{#management}}{{{ button }}}{{/management}}
<div class="tab-catalogue">
{{#categories}}
    <input type="radio" name="tab-catalogue-input" id="tab-catalogue-{{id}}" hidden="" aria-hidden="true"{{#first}} checked="1"{{/first}}/>
{{/categories}}
    <ul aria-hidden="true">
{{#categories}}
        <li>
            <label for="tab-catalogue-{{id}}">{{title}}</label>
        </li>
{{/categories}}
    </ul>
    <div>
{{#categories}}
        <section>
            <h2>{{title}}</h2>
            <div class="tab-catalogue-course">

            {{#courses}}
            {{> filter_coursecatalogue/course }}
            {{/courses}}

            </div>
        </section>
{{/categories}}
    </div>
</div>